@model ProductDto

<form asp-action="ProductDetails" method="post">
    <div class="pt-4">
        <input asp-for="ProductId" hidden/>
        <div class="card border-primary container" style="border:1px solid #808080;">
            <div class="card-header text-black row" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-danger"> @string.Format("{0:c}",Model.Price)</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge rounded-pill bg-primary">@Model.CategoryName</span>
                                    <p class="text-secondary pt-3">@Html.Raw(Model.Description)</p>
                                </div>
                            </div>
                            <div class="row mx-0">
                                <input asp-for="Count" class="form-control border-primary" />
                                <span asp-validation-for="@Model.Count" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row ">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger btn-square form-control " >Back to List</a>
                </div>
                <div class="col-12 col-md-6 ">
                    <button type="submit" class="btn btn-success form-control ">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
